<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
</head>
<body>
    <a href="/">Home</a>
     |
  <a href="/skills">All Skills</a>
    <h1>Skills</h1>
    <ul>
      <% skills.forEach(function(s) { %>
        <li>
          <form 
            action="/skills/<%= s.id %>?_method=DELETE" 
            method="POST"
            class="delete-form"
          >
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= s.id %>"><%= s.skill %></a>
            - 
          <%= s.years %> years
        </li>
      <% }); %>
    </ul>
    <a href="/skills/new">Add Skill</a>
</body>
</html>